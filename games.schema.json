{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Games List",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri-reference"
    },
    "games": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri-reference"
          },
          "players": {
            "type": "integer",
            "minimum": 1
          },
          "controls": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["keyboard", "mouse", "touch", "controller"]
            },
            "minItems": 1
          },
          "image": {
            "type": "string",
            "format": "uri-reference"
          },
          "isExternal": {
            "type": "boolean"
          },
          "isIncomplete": {
            "type": "boolean"
          }
        },
        "required": ["title", "url", "players", "controls"]
      }
    }
  },
  "required": ["$schema", "games"]
}
